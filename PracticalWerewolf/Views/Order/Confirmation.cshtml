@model PracticalWerewolf.ViewModels.Orders.ConfirmationViewModel

@{
    ViewBag.Title = "Confirmation";
}

<h2>Order Confirmation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <body onload="init()">
        <canvas id="can" width="800" height="200" style="position:center;border:2px solid;"></canvas>
    </body>

    <div class="form-horizontal">
        <h4>By signing the form above, you acknowledge that the requested shipment has been delivered.</h4>
        <hr />

        @using (Html.BeginForm("Confirmation", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Guid)

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                    <input type="button" value="Clear" id="clr" onclick="erase()" class="btn btn-default" />
                </div>
            </div>

        }

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Contractor")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Esignature.js"></script>
}